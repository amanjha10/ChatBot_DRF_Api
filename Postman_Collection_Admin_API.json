{
  "info": {
    "name": "Admin API Testing - Name Field & Company ID",
    "description": "Testing updated admin creation API with name field and company_id generation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login SuperAdmin",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const responseJson = pm.response.json();",
              "    pm.environment.set(\"token\", responseJson.access);",
              "    pm.test(\"Login successful\", function () {",
              "        pm.expect(pm.response.code).to.equal(200);",
              "    });",
              "} else {",
              "    pm.test(\"Login failed\", function () {",
              "        pm.expect.fail(\"Login should succeed\");",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"superadmin\",\n  \"password\": \"superadmin123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/login/",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "login", ""]
        }
      }
    },
    {
      "name": "2. Get Plans",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/list-plans/",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "list-plans", ""]
        }
      }
    },
    {
      "name": "3. Create Admin - Tesla",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Admin creation successful\", function () {",
              "    pm.expect(pm.response.code).to.equal(201);",
              "});",
              "",
              "pm.test(\"Response contains required fields\", function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson).to.have.property('name');",
              "    pm.expect(responseJson).to.have.property('email');",
              "    pm.expect(responseJson).to.have.property('password');",
              "    pm.expect(responseJson).to.have.property('company_id');",
              "    pm.expect(responseJson).to.have.property('plan');",
              "});",
              "",
              "pm.test(\"Company ID generated from name\", function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.company_id).to.match(/^TES\\d{3}$/);",
              "});",
              "",
              "pm.test(\"Name field matches input\", function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.name).to.equal(\"Tesla Motors Inc\");",
              "});",
              "",
              "pm.test(\"Password is generated\", function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.password).to.have.lengthOf(8);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type", 
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Tesla Motors Inc\",\n  \"email\": \"admin@tesla.com\",\n  \"address\": \"1 Tesla Road, Austin, TX\",\n  \"contact_person\": \"Elon Musk\",\n  \"contact_number\": \"+1-512-123-4567\",\n  \"phone_number\": \"+1-512-987-6543\",\n  \"plan_id\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/create-admin/",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "create-admin", ""]
        }
      }
    },
